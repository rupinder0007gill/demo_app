<div class="container p-3 border rounded bg-light my-3">
  <h2 class="text-center">Welcome To Login </h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field my-2">
      <%= f.label :email, class: "form-label" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-lg" %>
    </div>
    <div class="field my-2">
        <%= f.label :password, class: "form-label" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control form-control-lg" %>
    </div>
    <% if devise_mapping.rememberable? %>
      <div class="field my-2">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
      </div>
    <% end %>
    <div class="actions my-2">
      <%= f.submit "Log in", class: "btn btn-outline-info btn-lg" %>
      <%= link_to "Sign in with Google", user_google_omniauth_authorize_path, method: :post, class: "btn btn-outline-info btn-lg" %>
    </div>
  <% end %>
  <%= render "users/shared/links" %> 
</div>
